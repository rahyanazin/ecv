<%= form_for @subject do |f| %>
  <%= f.label :nome %><br>
  <%= f.text_field :title %><br>
  <br>
  <%= f.label :descrição %><br>
  <%= f.text_area :description %><br>
  <br>
  <%= f.label :visível %><br>
  <%= f.check_box :visible %><br>
  <br>
  <%= f.label :novo %><br>
  <%= f.check_box :new %><br>
  <br>      
  <%= f.submit %>
<% end %>